<h1>Welcome, <%= current_user.username %></h1>
<a href="/logout">Logout</a>

<h3><a href="/posts/new">Create New post Here</a></h3>

<% @posts.each do |post| %>
  <%= post.name %>
  <%= post.ingredients %>
  <%= post.directions %>
  <%= post.cooktime %>
  <%= post.chef %>
  <%= post.caption %>
  <%= post.id %>
  <a href="/posts/<%= post.id %>/edit">edit</a>
  <br><br>
<% end %>
