

  <div class="row justify-content-center" style="margin-top: 2em">
    <div class="card" style="width: 30rem;">
      <%# <img src="..." class="card-img-top" alt="..."> %>
      <div class="card-body text-left">
        <h4 class="text-muted">EDIT</h4>
        <h1 class="display-4"><%=@post.name%></h1>
          
        <form class="form" action="/posts/<%=@post.id%>" method="POST">
          <input type="hidden" name="_method" value="patch" />
            <div class="my-5 justify-content-center">
            <div class="dropdown-divider"></div>
                <label class="my-0"><strong>Name</strong> </label>
                <input type="text" class="form-control" style="margin-bottom: 20px" name="name" value="<%=@post.name%>" />
                <label class="my-0"><strong>Ingredients</strong> </label>
                <textarea type="text" class="form-control" style="margin-bottom: 20px" name="ingredients" value="<%=@post.ingredients%>"><%=@post.ingredients%></textarea>
                <label class="my-0"><strong>Instructions</strong> </label>
                <textarea type="text" class="form-control" style="margin-bottom: 20px" name="directions" value="<%=@post.directions%>"><%=@post.directions%></textarea>
                <label class="my-0"><strong>Cook Time</strong> </label>
                <input type="text" class="form-control" style="margin-bottom: 20px" name="cooktime" value="<%=@post.cooktime%>" />
                <label class="my-0"><strong>Chef</strong> </label>
                <input type="text" class="form-control" style="margin-bottom: 20px" name="chef" value="<%=@post.chef%>" />
                <label class="my-0"><em>Tell us what you love about this recipe</em> </label>
                <textarea type="text" class="form-control" style="margin-bottom: 20px" name="caption" value="<%=@post.caption%>"><%=@post.caption%></textarea>
                <div class="dropdown-divider"></div>
                <button type="submit" class="btn btn-success my-sm-2" value="submit">Save</button>
                <a class="btn btn-warning my-sm-2" href="/posts" style="text-decoration: none">Cancel</a>
            </div>
        </form>

        <form action="/posts/<%=@post.id%>/delete" method="POST">
          <input type="hidden" name="_method" value="delete" />
          <input class="btn btn-danger my-sm-2" type="submit" value="Delete post" />
        </form>

      </div>
    </div>
  </div>
