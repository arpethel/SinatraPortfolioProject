<form class="form-signin" action="/signup" method="post">
  <h2>Sign up</h2>
  <div class="form-inline my-2 my-lg-0 justify-content-center">
    <input type="email" class="form-control mr-sm-2" name="email" placeholder="Email">
    <input type="text" class="form-control mr-sm-2" name="username" placeholder="Username">
    <input type="password" class="form-control mr-sm-2" name="password" placeholder="Password">
    <button type="submit" class="btn btn-primary my-2 my-sm-0" value="Sign Up">Sign in</button>
  </div>
</form>